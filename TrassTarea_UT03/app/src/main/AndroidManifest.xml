<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/trasstarea_icon"
        android:label="@string/app_name"
        android:logo="@drawable/pencil4"
        android:roundIcon="@mipmap/trasstarea_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrassTarea"
        tools:targetApi="34">
        <activity
            android:name=".actividades.EstadisticasActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.PreferenciasActivity"
            android:exported="false"
            android:label="@string/title_activity_preferencias" />
        <activity
            android:name=".actividades.EditarTareaActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.CrearTareaActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ListadoTareasActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.mainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>