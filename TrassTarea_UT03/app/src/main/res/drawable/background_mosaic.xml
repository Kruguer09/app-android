<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del mosaico (puedes cambiar el color si lo deseas) -->
    <item android:drawable="@android:color/white" />

    <!-- Imagen que se repetirá en el fondo (ajusta la fuente según tus necesidades) -->
    <item>
        <bitmap
            android:src="@drawable/trama_background_pencil"
            android:tileMode="repeat"
            android:tint="#F2FFFFFF"
            android:tintMode="src_atop"
            android:dither="true" />
    </item>
</layer-list>