<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.
    <style name="Theme.TrassTarea" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Base.Theme.mainActivity" parent="Theme.AppCompat.DayNight.NoActionBar"> <!--noActionBar me servirá solo para la primera pantalla y evitar que aparezca la barra que contendrá el menú-->
        <item name="android:statusBarColor">@color/primario</item>
    </style>

    <style name="Theme.TrassTarea" parent="Theme.MaterialComponents.DayNight">

        <!-- Primary brand color.-->
        <item name="colorAccent">#00599C</item> <!--color que cambia elementos de la interfaz como la de la barra de progreso-->
        <item name="colorPrimary">@color/primario</item>
        <item name="colorPrimaryVariant">@color/primario_variante</item>
        <item name="colorOnPrimary">@color/claro</item>
        <item name="android:textColorTertiary">@color/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/resaltado</item>
        <item name="colorSecondaryVariant">@color/resaltado_oscuro</item>
        <item name="colorOnSecondary">@color/oscuro</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primario</item>

        <!-- Customize your theme here. -->
    </style>
</resources>